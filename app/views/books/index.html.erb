<div class="head">
  <h1 class="main-title">Books</h1>
  <table>
    <thead>
      <tr>
        <th class="a">Title</th>
        <th class="b">Body</th>
        <th colspan="3" class="c"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
       <td class="a"><%= book.title %></td>
       <td class="b"><%= book.body %></td>
       <td><%= link_to 'Show', book_path(book.id) %></td>
       <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
       <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data:{ confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<div class="body">
  <h2 class="new-title">New book</h2>
  <% if @book_new.errors.any? %>
    <%= @book_new.errors.count %>errors prohibited this book from being saved:
    <% @book_new.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model: @book_new, local:true do |f| %>

  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Body</h4>
    <%= f.text_area :body %>
  
  <div class="link-btn"><%= f.submit 'Create Book' %></div>
  <% end %>
</div>
